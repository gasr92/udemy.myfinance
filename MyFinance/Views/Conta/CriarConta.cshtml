@model  MyFinance.Models.ContaModel

@{
    ViewData["Title"] = "CriarConta";
}

<h2>CriarConta</h2>

<form asp-controller="Conta" asp-action="CriarConta" method="post">

    <div class="form-group">
        <label for="nome">Nome:</label>
        <input type="text" class="form-control" id="nome" asp-for="Nome">
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="nome">Saldo:</label>
        <input type="number" class="form-control" id="saldo" asp-for="Saldo">
        <span asp-validation-for="Saldo" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-success">Salvar</button>
</form>