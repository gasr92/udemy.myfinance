
@{
    ViewData["Title"] = "Menu";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12 text-center">
            <div class="col-md-4">
                <a asp-controller="Conta" asp-action="Index">
                    <img src="~/images/conta.png" width="100" height="100" />
                </a>
                <h3>Criar conta</h3>
            </div>

            <div class="col-md-4">
                <a asp-controller="PlanoConta" asp-action="Index">
                    <img src="~/images/planocontas.png" width="100" height="100" />
                </a>
                <h3>Plano de contas</h3>
            </div>

            <div class="col-md-4">
                <a asp-controller="Transacao" asp-action="Index">
                    <img src="~/images/registrar_transacao.png" width="100" height="100" />
                </a>
                <h3>Registrar transação</h3>
            </div>
        </div>
    </div>

    <br />

    <div class="row">
        <div class="col-md-12 text-center">
            <div class="col-md-4">
                <a asp-controller="Transacao" asp-action="Extrato">
                    <img src="~/images/extrato.png" width="100" height="100" />
                </a>
                <h3>Extrato</h3>
            </div>

            <div class="col-md-4">
                <a asp-controller="Transacao" asp-action="Dashboard">
                    <img src="~/images/dashboard.png" width="100" height="100" />
                </a>
                <h3>Dashboard</h3>
            </div>

            <div class="col-md-4">
                <img src="~/images/ajuda.png" width="100" height="100" />
                <h3>Ajuda</h3>
            </div>
        </div>
    </div>
</div>